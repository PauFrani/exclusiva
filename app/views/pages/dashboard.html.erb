<div class="w-100 search-background2" style="background-image: linear-gradient(225deg, rgba(0,0,0,0.4), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1462392246754-28dfa2df8e6b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80');">
  <h1 class= "title-text title-dashboard">Dashboard</h1>
</div>
<div class="container-fluid mt-5">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="Pendientes-tab" data-toggle="tab" href="#Pendientes" role="tab" aria-controls="Pendientes" aria-selected="true">Pendientes</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="Confirmadas-tab" data-toggle="tab" href="#Confirmadas" role="tab" aria-controls="Confirmadas" aria-selected="false">Confirmadas</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="Canceladas-tab" data-toggle="tab" href="#Canceladas" role="tab" aria-controls="Canceladas" aria-selected="false">Canceladas</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="Pendientes" role="tabpanel" aria-labelledby="Pendientes-tab">
      <div>
        <% @purchases_pending.each do |purchase| %>
          <div class="card-product m-3">
            <%= image_tag purchase.product.photos.first.url_photo, class:"img-card border-right" %>
            <div class="card-product-infos flex-grow-1">
              <h2><%= purchase.product.name %> <em>(<%= purchase.product.description %>)</em></h2>
              <p><%= purchase.showroom_variant_stock.showroom.brand.name.upcase %> - <%= purchase.showroom_variant_stock.showroom.name %></p>
              <p><strong>Cliente: </strong><%= purchase.bidding.user.first_name %> <%= purchase.bidding.user.last_name %></p>
              <p><strong>Valor:</strong> ARS <%= purchase.bidding.amount %></p>
            </div>
            <div class="mx-3">
              <%= link_to purchase_path(purchase, status: "Confirmed"), method: :patch, data: { confirm: "Quiere confirmar la oferta."} do %>
                <i class="btn-card fas fa-check-square"></i>
              <% end %>
              <%= link_to purchase_path(purchase, status: "Cancelled"), method: :patch, data: { confirm: "Quiere rechazar la oferta."} do %>
                <i class="btn-card-c fas fa-window-close"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>


    <div class="tab-pane fade" id="Confirmadas" role="tabpanel" aria-labelledby="Confirmadas-tab">
