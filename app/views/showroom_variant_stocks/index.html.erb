<div class="navbar-filters d-flex justify-content-between align-items-center m-3 border-bottom border-white">
  <form action="" class="form_oferta">
    <%= form_for :@bidding do |f| %>
      <div>
        Presupuesto: <%= f.text_field :amount, disabled: true %>
      </div>
      <div>
        Categoria: <%= f.text_field :category, disabled: true %>
      </div>
      <div>
        Marcas: <%= f.select :brands, ["Clifftone", "Mango", "Vitamina"] %>
      </div>
      <div>
        Ubicacion  : <%= f.text_field :address, disabled: false%>
      </div>
      <div>
        <%= f.submit "Buscar Oferta", class: "button-general" %>
      </div>
    <% end %>
  </form>
</div>
<div class="cards-results-container">
  <div class="cards-results-list">
    <% @products_items.each do |showroom_variant_stock|%>
      <%= link_to product_path(showroom_variant_stock.product), class: 'link-card' do %>
        <div class="card-results-individual">
          <img src="https://conocedores.com/wp-content/uploads/2019/02/zara-new-logo-06022019in2.png" alt="logo">
          <div class="paragraph">
            <h2><%= showroom_variant_stock.product.name %></h1>
            <p><%= showroom_variant_stock.product.category %></p>
            <p id="address-result"><%= showroom_variant_stock.address %></p>
            <div class="location">
              <i class="fas fa-map-marker-alt"></i>
              <p>2.5 km</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
