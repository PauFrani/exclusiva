<div class="">
  <form class="form-inline" style="position: fixed;" action="/showroom_variant_stocks">
    <div class="form-inline2">
      <label for="amount">Bid:</label>
      <input type="text" id="amount"  name="amount"  value="<%= @bidding.amount %>">
      <label for="category">Category:</label>
      <input type="text" id="category" name="category" value="<%= @bidding.category %>">
    </div>
    <div class="form-inline2">
      <label for="address">Address:</label>
      <input type="text" id="address" name="address" value="<%= @bidding.address.street %>">
      <button type="submit">Submit</button>
    </div>
  </form>
</div>
<div class="row justify-content-sm-center justify-content-xs-center" style="margin-top:80px; padding-top:34px;">
  <div class="col-xs-12 col-sm-9 col-md-6 col-lg-5" style="padding:0px margin:0px 10px">
    <div>
      <% @showroom_variant_stocks.each do |showroom_variant_stock|%>

        <%= link_to showroom_variant_stock_path(showroom_variant_stock), target: :_blank , class: 'link-card' do %>

          <div class="card-results-individual">
            <div class="d-flex justify-content-between">
              <%= image_tag showroom_variant_stock.product.photos.first.url_photo %>
              <div class="paragraph ml-3">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <h2><%= showroom_variant_stock.product.name %></h1>
                    <p><%= showroom_variant_stock.product.category %></p>
                  </div>
                  <div id="logo-results">
                    <%= image_tag showroom_variant_stock.showroom.brand.logo %>
                  </div>
                </div>
                <p id="address-result"><%= truncate(showroom_variant_stock.showroom.address.street, :length => 50) %></p>
                <div class="location">
                  <i class="fas fa-map-marker-alt"></i>
                  <p><%= Geocoder::Calculations.distance_between(showroom_variant_stock.showroom.address, @bidding.address).round(2) %> km</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-7" style="padding:0px">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
