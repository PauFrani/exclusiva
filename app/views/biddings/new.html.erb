<div class="w-100 search-background" style="background-image: linear-gradient(225deg, rgba(0,0,0,0.4), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1462392246754-28dfa2df8e6b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80');">
</div>
<div class="text-center cta-search mb-4">
  <h1 class="title-text">Comprá moda al precio</h1>
  <h2 class="title-text">que querés</h2>
</div>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-11 col-lg-8 col-md-10 cta-search-wrapper py-md-4">
      <div class="px-5">
        <%= simple_form_for(@bidding) do |f| %>
          <span class="header-text text-dark">Buscá por precio</span>
          <div class="d-md-flex align-items-center w-md-100">
            <%= f.input :amount, input_html: { class: "cta-search-input flex-grow-1"}, wrapper_html: { class: "m-0 h-100 w-100"}, label: false, placeholder: "Ingrese su monto" %>
            <div class='d-flex'>
              <%= f.submit 'Buscar', class:'button-search mx-auto flex-grow-0 mt-3 mt-md-0' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="text-center mt-5 d-none d-md-block">
  <h3 class="title-text2 text-dark">Quienes confían en nosotros</h1>
</div>



