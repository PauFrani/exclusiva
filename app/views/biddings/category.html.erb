<div class="step-by-step">
  <div class="number">
    <span>2</span>
  </div>
  <h2>Elegí la Categoría</h2>
  <p></p>
</div>

<!-- CARDS CATEGORY  -->

<div class="cards-bidding">
  <% 8.times do %>
    <div class="card-bidding-category" data-category="Pants">
      <div>
        <img class="photo" src="https://gloimg.drlcdn.com/L/pdm-product-pic/Clothing/2018/10/12/goods-img-app/1539716058960958979.jpg" alt="vestidos">
      </div>
      <p>Category</p>
      <%= image_tag 'circle.png', class: 'circle'%>
    </div>
  <% end %>
</div>
<br>

<%= simple_form_for :bidding, url: brands_biddings_path, method: :get do |b| %>
  <%= b.hidden_field :category %>
  <%= b.submit "Continuar", class:"btn btn-primary" %>
<% end %>
