<div class="navbar-filters d-flex justify-content-between align-items-center m-3 border-bottom border-white">
  <form action="" class="form_oferta">
    <%= form_for :@bidding do |f| %>
      <div>
        Presupuesto: <%= f.text_field :amount, disabled: true %>
      </div>
      <div>
        Categoria: <%= f.text_field :category, disabled: true %>
      </div>
      <div>
        Marcas: <%= f.select :brands, ["Clifftone", "Mango", "Vitamina"] %>
      </div>
      <div>
        Ubicacion  : <%= f.text_field :address, disabled: true%>
      </div>
      <div>
        <%= f.submit "Buscar Oferta", class: "button-general" %>
      </div>
    <% end %>
  </form>
</div>

<div class="cards-results-container">
  <div class="cards-results-list">
    <%20.times do%>
    <div class="card-results-individual">
      <img src="https://conocedores.com/wp-content/uploads/2019/02/zara-new-logo-06022019in2.png" alt="logo">
      <div class="paragraph">
        <h2>title of the product</h1>
          <p>brand</p>
          <div class="location">
            <i class="fas fa-map-marker-alt"></i>
            <p>2.5 km</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="map">
  </div>
</div>
